{
  "manifest_version": 3,
  "name": "ASB921 Dienst-Finder",
  "version": "1.7",
  "description": "Filtert den Dienstplan auf old.samariter.at",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://old.samariter.at/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["http://old.samariter.at/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}
